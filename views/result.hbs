<div
  class="container d-flex flex-column align-items-center justify-content-center"
>
  <h3>連結已產生</h3>
  <img
    class="mb-4"
    src="https://assets-lighthouse.alphacamp.co/uploads/image/file/16716/ExportedContentImage_00.png"
    width="90px"
    height="90px"
    alt="logo"
  />
  <a
    class="mt-3 shortUrl"
    target="_blank"
    href="http://localhost:3000/{{randomSring}}"
  >http://localhost:3000/{{randomSring}}</a>
  <div class="d-flex justify-content-center">
    <button
      class="btn btn-outline-warning rounded-pill mt-4"
      onclick="copyLink()"
    >COPY</button>
    <button
      class="btn btn-outline-warning rounded-pill mt-4"
      onclick="location.href='http://localhost:3000/'"
    >返回頁面</button>
  </div>
</div>

<script>
  function copyLink() { const link = document.querySelector('.shortUrl');
  document.getSelection().selectAllChildren(link); document.execCommand("copy");
  window.getSelection().removeAllRanges(); }

</script>